<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:background="@color/deepgray"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/sinotik_left"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="10"
        android:src="@drawable/icon_smallleft_mdpi" />

    <include
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="3"
        layout="@layout/sinotik_air_quality" />

    <ImageView
        android:id="@+id/sinotik_right"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="10"
        android:src="@drawable/icon_smallright_mdpi" />

</LinearLayout>