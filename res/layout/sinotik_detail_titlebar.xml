<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="45dp"
    android:background="@color/gray"
    android:gravity="center">
    
    <LinearLayout
        android:id="@+id/sinotik_detail_titlebar_left"
	    android:layout_width="80dp"
	    android:layout_height="wrap_content"
	    android:layout_centerHorizontal="true"
	    android:layout_centerVertical="true"
	    android:layout_alignParentLeft="true"
        android:layout_marginLeft="16dp"
	    android:gravity="left"
	    android:orientation="horizontal" >

	     <ImageView
	        android:id="@+id/sinotik_titlebar_left"
	        android:layout_width="25dp"
	        android:layout_height="25dp"
	        android:src="@drawable/icon_back_mdpi" /> 
        
     </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/sinotik_titlebar_middleText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PM 2.5"
                android:textColor="@color/white" />
        </LinearLayout>
        
     <LinearLayout
         android:id="@+id/sinotik_detail_titlebar_right"
	    android:layout_width="80dp"
	    android:layout_height="wrap_content"
	    android:layout_centerHorizontal="true"
	    android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="16dp"
	    android:gravity="right"
	    android:orientation="horizontal" >
        
	     <ImageView
	        android:id="@+id/sinotik_titlebar_right"
	        android:layout_width="25dp"
	        android:layout_height="25dp"
	        android:src="@drawable/icon_share" />
     </LinearLayout>

</RelativeLayout>
